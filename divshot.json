{
  "name": "saptalea",
  "root": "public",
  "clean_urls": true,
  "error_page": "error.html",
  "forms": {
    "contact": {
      "to": "info@saptalea.co.il",
      "from": "website@saptalea.co.il",
      "replyTo": "{{name}} <{{email}}>",
      "subject": "הודעה נתקבלה מאת {{name}}",
      "html": "<b>שם:</b> {{name}}<br>{{message}}",
      "text": "שם: {{name}}\n{{message}}",
      "success": "/contact-received",
      "failure": "/contact-failure"
    },
    "order": {
      "to": "sales@saptalea.co.il",
      "from": "website@saptalea.co.il",      
      "subject": "הזמנה התקבלה מ{{name}}",
      "html": "<b>שם:</b> {{name}}<br><b>מייל:</b> {{email}}<br><b>מוצר:</b>{{product}}",
      "text": "שם: {{name}}\nמייל: {{email}}\nמוצר: {{product}}",
      "success": "/order-received",
      "failure": "/order-failure"
    }
  }
}